{
  "name": "Game Economy - .NET Dev Container",
  "dockerComposeFile": "docker-compose.yml",
  "service": "devcontainer",
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",

  // Configure git to use the repository inside the container
  "initializeCommand": "echo 'Initializing devcontainer...'",
  "postCreateCommand": ".devcontainer/shared/base/scripts/post-create.sh",

  // Features to install
  "features": {
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/git:1": {
      "version": "latest"
    }
  },

  // VS Code customizations
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-dotnettools.csdevkit",
        "ms-dotnettools.csharp",
        "GitHub.copilot",
        "GitHub.copilot-chat",
        "csharpier.csharpier-vscode"
      ],
      "settings": {
        "http.proxy": "http://proxy:3128",
        "http.proxyStrictSSL": false,
        "terminal.integrated.defaultProfile.linux": "bash"
      }
    }
  },

  // Container user
  "remoteUser": "vscode",

  // Ensure git credentials are forwarded
  "mounts": [
    "source=${localEnv:HOME}/.gitconfig,target=/home/vscode/.gitconfig,type=bind,consistency=cached"
  ],

  // Forward ports for the Blazor app
  "forwardPorts": [5000, 5001],
  "portsAttributes": {
    "5000": {
      "label": "Blazor HTTP",
      "onAutoForward": "notify"
    },
    "5001": {
      "label": "Blazor HTTPS",
      "onAutoForward": "notify"
    }
  }
}
